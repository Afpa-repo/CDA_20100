<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Village Green{% endblock %}</title>
        <!-- Bootstrap -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
        <!-- Google Fonts -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
        <!-- Style css -->
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>

    <body>

        <div class="container p-0" id="corps">
                <header class="row m-0" id="navbar">
                    <div id="logo" class="col-4 p-0">
                        <a href="{{ path('home') }}"><img src="{{ asset('img/HEADER/logo_village.png') }}" alt="logo"></a>
                    </div>

                    <div class="col-8 p-0" >

                        <!-- Premiere ligne navbar-->
                        <div class="row" >
                            <div  class="col-12">
                                <nav class="navbar navbar-expand-lg navbar-dark m-0 p-0" id="nav1" >

                                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu">
                                            <span class="navbar-toggler-icon"></span>
                                    </button>

                                    <div class="collapse navbar-collapse text-right" id="menu">

                                    <ul class="navbar-nav ">
                                        <a class="nav-link text-dark" href="" title="Infos"><li class="nav-item">Infos</li></a>
                                        <a class="nav-link text-dark" href="" title="Espace client"><li class="nav-item">Espace client</li></a>
                                        <a class="nav-link text-dark" href="" title="Panier"><li class="nav-item mr-5"><img src="{{ asset('img/HEADER/picto_panier.png') }}" alt="panier"></li></a>
                                        <a class="nav-link text-dark" href="" title="Pays"><li class="nav-item ml-5"><img src="{{ asset('img/HEADER/picto_pays.png') }}" alt="pays"></li></a>
                                    </ul>

                                    </div>

                                </nav>
                            </div>
                        </div>

                        <!--2e ligne navbar  -->
                        <div class="row pt-0 ml-4">
                            <div class="col-12" id="nav2">
                                <nav class="navbar navbar-expand-lg navbar-dark text-center m-0 p-0">
                                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu1">
                                            <span class="navbar-toggler-icon"></span>
                                        </button>

                                    <div class="collapse navbar-collapse" id="menu1">

                                        <ul class="navbar-nav ">
                                            <li class="nav-item dropdown">
                                                <a class="nav-link dropdown-toggle text-white mr-4" href="#" id="produitDropdown"
                                                    role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Produits</a>
                                                    <div class="dropdown-menu" aria-labelledby="produitDropdown">
                                                        <a class="dropdown-item" href="{{ path('produit_index') }}">Liste</a>
                                                        <a class="dropdown-item" href="{{ path('produit_new') }}">Ajouter Produit(s)</a>
                                                    </div>
                                            </li>
                                            <a class="nav-link text-white" href="" title="Service"><li class="nav-item ml-5 mr-5 mt-2">Service</li></a>
                                            <a class="nav-link text-white" href="" title="Aide"><li class="nav-item ml-5 mr-5 mt-2 ">Aide</li></a>
                                            <a class="nav-link text-white" href="" title="A propos"><li class="nav-item ml-5 mr-5 mt-2">A propos</li></a>
                                        </ul>

                                    </div>
                                </nav>
                            </div>
                        </div>

                        <!--3e ligne navbar   -->
                        <div class="row">

                            <div id="nav3" >
                                <nav class="navbar navbar-expand-lg navbar-dark m-0 p-0">

                                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu2">
                                        <span class="navbar-toggler-icon"></span>
                                    </button>

                                    <div class="collapse navbar-collapse" id="menu2">

                                        <ul class="navbar-nav ">
                                            <div class="dropdown">
                                            <a class="nav-link text-white" href="" title="Guitares"><li class="nav-item mt-2 ml-1 dropbtn">Guit/Bass</li></a>
                                                <div class="dropdown-content guit_bass">
                                                    <a href="#" data-filter=".Guitares">Guitares</a>
                                                    <a href="#" data-filter=".Guitares.Electriques">Guitares Electriques</a>
                                                    <a href="#" data-filter=".Guitares.Classiques">Guitares Classiques</a>
                                                    <a href="#">Guitares Acoustiques</a>
                                                    <a href="#" data-filter=".Basses">Basses</a>
                                                    <a href="#">Basses Electriques</a>
                                                    <a href="#">Basses Acoustiques</a>
                                                    <a href="#" data-filter=".Ukulélés">Ukulélés</a>
                                                </div>
                                            </div>
                                            <a class="nav-link text-white" href="" title="Batteries"><li class="nav-item ml-2 mt-2">Batteries</li></a>
                                            <a class="nav-link text-white" href="" title="Clavier"><li class="nav-item ml-2 mt-2">Clavier</li></a>
                                            <a class="nav-link text-white" href="" title="Studio"><li class="nav-item ml-2 mt-2">Studio</li></a>
                                            <a class="nav-link text-white" href="" title="Sono"><li class="nav-item ml-2 mt-2">Sono</li></a>
                                            <a class="nav-link text-white" href="" title="Eclairage"><li class="nav-item ml-2 mt-2">Eclairage</li></a>
                                            <a class="nav-link text-white" href="" title="DJ"><li class="nav-item ml-2 mt-2">DJ</li></a>
                                            <a class="nav-link text-white" href="" title="Cases"><li class="nav-item ml-2 mt-2">Cases</li></a>
                                            <a class="nav-link text-white" href="" title="Accessoires"><li class="nav-item ml-2 mt-2 ">Accessoires</li></a>
                                        </ul>
                                    </div>
                                </nav>
                            </div>
                        </div>
                    </div>
                </header>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

    {% block body %}{% endblock %}
        </div>
        <div class= "container p-0" id="foot">
            <footer>
                <div class="row mt-3">
                    <div class="col-12">
                        <img src="{{ asset('img/FOOTER/footer_SIMPLE.png') }}" class="img-fluid" id="img8" alt="footer">
                    </div>
                </div>
            </footer>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>

        <!-- Isotope JS Library -->

        <script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"></script>

        <script src="{{ asset('js/script.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>


        <div class="form-group row">
            <div class="col-2 pl-0">
                {{ form_label(form.cliEmail, 'Votre e-mail') }}
            </div>
            <div class="col-4 pl-0">
                {{ form_widget(form.cliEmail) }}
            </div>
        </div>
    </div>

        <div class="col-12 mr-3 ml-3">
            <div class="form-group row">
                <div class="col-2 pl-0">
                    {{ form_label(form.cliPassword, 'Créer votre mot de passe') }}
                </div>
                <div class="col-4 pl-0">
                    {{ form_widget(form.cliPassword) }}
                </div>

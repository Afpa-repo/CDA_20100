                <div class="col-4 pl-0">
                    {{ form_label(form.cliNom, 'Votre nom') }}
                </div>
                <div class="col-6 pl-0">
                    {{ form_widget(form.cliNom) }}
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-4 pl-0">
                    {{ form_label(form.cliPrenom, 'Votre prénom') }}
                </div>
                <div class="col-6 pl-0">
                    {{ form_widget(form.cliPrenom) }}
                </div>
            </div>

{% extends 'base.html.twig' %}

{% block title %}Village Green{% endblock %}

{% block body %}

    {% if app.user %}
        <div class="alert alert-success">
            Vous êtes connecté(e) en tant que <b>{{ app.user.username }}</b> <a type="button" class="btn btn-danger" id="bouton_deconnexion" href="{{ path('logout') }}">Déconnexion</a>
        </div>
    {% endif %}

<div class=" container p-0" id="corps_index">

    <div class="row ml-5 mr-4">

        <div class="col-9">   
            <img src="{{ asset('img/BODY/pub_guitare.png') }}" id="guitare" alt="guitare">
        </div>

        <div class="col-3" id="promo">
            <img src="{{ asset('img/BODY/banniere_droite.png') }}" alt="banniere_droite">
        </div>

    </div>

    <div class="row mt-3">

        <div class="col-12">
            <img src="{{ asset('img/BODY/banniere_centre.png') }}" id="centre" alt="banniere_centre">
        </div>

    </div>

    <h3 class="ml-3 mt-2 mb-2">Nos catégories</h3>

    <div class="row m-0 p-0"id="lignephoto">

        <div class="col-lg-3 p-0"><img src="{{ asset('img/BODY/CATEGORIES_guitare.png') }}" alt="guitare" onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_guitare.png'" onmouseout="this.src='img/BODY/CATEGORIES_guitare.png'" class="img-fluid" id="imgguit"></div>
        <div class="col-lg-3 p-0"><img src="{{ asset('img/BODY/CATEGORIES_batterie.png') }}" alt="batterie" onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_batterie.png'" onmouseout="this.src='img/BODY/CATEGORIES_batterie.png'" class="img-fluid" id="imgbat"></div>
        <div class="col-lg-3 p-0"><img src="{{ asset('img/BODY/CATEGORIES_piano.png') }}" alt="piano" onmouseover="this.src='img/BODY/CATEGORIESpiano.png'" onmouseout="this.src='img/BODY/CATEGORIES_piano.png'" class="img-fluid" id="imgpia"></div>
        <div class="col-lg-3 p-0"><img src="{{ asset('img/BODY/CATEGORIES_micro.png') }}" alt="micro" onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_micro.png'" onmouseout="this.src='img/BODY/CATEGORIES_micro.png'" class="img-fluid" id="imgmic"></div>

    </div>

    <div class="row m-0 p-0"id="lignephoto">

        <div class="col-lg-3 p-0"><img src="{{ asset('img/BODY/CATEGORIES_sono.png') }}" alt="sono" onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_sono.png'" onmouseout="this.src='img/BODY/CATEGORIES_sono.png'" class="img-fluid"></div>
        <div class="col-lg-3 p-0"><img src="{{ asset('img/BODY/CATEGORIES_cases.png') }}" alt="cases" onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_cases.png'" onmouseout="this.src='img/BODY/CATEGORIES_cases.png'" class="img-fluid"></div>
        <div class="col-lg-3 p-0"><img src="{{ asset('img/BODY/CATEGORIES_cable.png') }}" alt="cable" onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_cables.png'" onmouseout="this.src='img/BODY/CATEGORIES_cable.png'" class="img-fluid"></div>
        <div class="col-lg-3 p-0 "><img src="{{ asset('img/BODY/CATEGORIES_saxo1.png') }}" alt="saxo1" onmouseover="this.src='img/BODY/CATEGORIES_ROLLOVER_saxo.png'" onmouseout="this.src='img/BODY/CATEGORIES_saxo1.png'"class="img-fluid" id="imgsax"></div>
        
    </div>
        
    <div class="row ml-2 mt-3">
        <div class="col-6">
            <h3>Nos meilleures ventes</h3>
        </div>

        <div class="col-6">
            <h3>Nos partenaires</h3>
        </div>
    </div>

    <div class="row m-0 mb-2" id="rowb"> 

        <div class="col-6 m-0 pr-1">

            <div class="row ml-0">

                <div class="col-4 pr-2" id="img2">
                    <img src="{{ asset('img/BODY/TOP_VENTES_guitare.png') }}" alt="guitare" onmouseover="this.src='img/BODY/ROLL_OVER_guitare.png'" onmouseout="this.src='img/BODY/TOP_VENTES_guitare.png'" class="img-fluid">
                </div>  
                                    
                <div class="col-4 pr-2" id="img3">
                    <img src="{{ asset('img/BODY/TOP_VENTES_saxo.png') }}" alt="saxo" onmouseover="this.src='img/BODY/TOP_VENTES_ROLLOVER_saxo.png'" onmouseout="this.src='img/BODY/TOP_VENTES_saxo.png'" class="img-fluid">
                </div>

                <div class="col-4 pr-2" id="img4">
                    <img src="{{ asset('img/BODY/TOP_VENTES_piano.png') }}" alt="piano" onmouseover="this.src='img/BODY/TOP_VENTES_ROLLOVER_piano.png'" onmouseout="this.src='img/BODY/TOP_VENTES_piano.png'" class="img-fluid">
                </div>

            </div>

        </div>

        <div class="col-6 pr-2" id="img5">
            <img src="{{ asset('img/BODY/partenaires_4_logos.png') }}" alt="partenaires" class="img-fluid">
        </div>
            
    </div>

</div>

{% endblock %}
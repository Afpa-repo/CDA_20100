{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1 class="text-center mb-5">{{ produit.proLib }}</h1>
    <img id="img_show" src="{{asset('img/PRODUITS/')}}{{ produit.proPhoto }}" alt="Photo détail">

<div class="container">

    <table class="table table-striped">
        <tbody>
            {#<tr>
                <th>ProId</th>
                <td>{{ produit.proId }}</td>
            </tr>
            <tr>
                <th>Libellé</th>
                <td>{{ produit.proLib }}</td>
            </tr>#}
            <tr>
                <th>Description</th>
                <td class="col-lg">{{ produit.proDescr }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td class="col-lg">{{ produit.proPrixAchat }} €</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td class="col-lg">{{ produit.proStock }} pièce(s)</td>
            </tr>
            {#<tr>
                <th>ProActif</th>
                <td>{{ produit.proActif ? 'Yes' : 'No' }}</td>
            </tr>#}
        </tbody>
    </table>

    <a class="btn btn-secondary" id="btn_retour2" href="{{ path('produit_index') }}">RETOUR</a>

    <a class="btn btn-primary" id="btn_modification" href="{{ path('produit_edit', {'proId': produit.proId}) }}">MODIFICATION</a>

    {{ include('produit/_delete_form.html.twig') }}

</div>

{% endblock %}

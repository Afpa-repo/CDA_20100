<form method="post" action="{{ path('produit_delete', {'proId': produit.proId}) }}" onsubmit="return confirm('Etes-vous certain de vouloir supprimer cet article ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.proId) }}">
    <button class="btn btn-danger float-right" id="btn_supprimer">Supprimer</button>
</form>

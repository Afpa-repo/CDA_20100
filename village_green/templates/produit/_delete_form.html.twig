<form method="post" action="{{ path('produit_delete', {'proId': produit.proId}) }}" onsubmit="return confirm('Etes-vous certain(e) de vouloir supprimer cet article ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.proId) }}">
    <button id="btn_supprimer" class="btn btn-danger float-right">SUPPRIMER</button>
</form>
